<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AbstractCalendarPromotionTitle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20.0dip</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="AbstractCalendarPromotionText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextAppearance.SuwCardTitle"
        parent="@android:style/TextAppearance.Material.Display1">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MinTimeProgressViewStyle" parent="@android:style/Widget.Material.ProgressBar" />
    <style name="MinTimeProgressDialogStyleBase" parent="@android:style/Theme.Material.Dialog" />
    <style name="UnifiedEmailTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:listViewWhiteStyle">@android:style/Widget.Material.ListView</item>
    </style>
    <style name="ActionBarWidgetTheme" parent="@android:style/Theme.DeviceDefault" />

    <!--<style name="MessageHeaderPopupStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">-->
    <!--<item name="android:overlapAnchor">true</item>-->
    <!--<item name="overlapAnchor">true</item>-->
    <!--</style>-->
    <!--<attr name="overlapAnchor" format="boolean" />-->
    <style name="LabelSyncTheme" parent="@android:style/Theme.Material.Dialog" />
    <style name="GmailTheme.NoActionBar" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:backgroundTint">#80000000</item>
    </style>
    <style name="GmailTheme.NoActionBar.Fullscreen"
        parent="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:backgroundTint">#80000000</item>
    </style>

    <style name="RecipientEditTextViewBase" parent="@android:attr/autoCompleteTextViewStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">32.0dip</item>
        <item name="android:popupBackground">#aa000000</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="AbstractComposeArea">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#80000000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="MailActivityTheme" parent="@*common:style/Theme.AppCompat.NoActionBar" />
    <style name="ComposeTheme" parent="@*common:style/Theme.AppCompat" />

    <style name="ConversationListFadeBase" parent="@android:style/Widget.Material.ListView">
        <item name="android:windowShowWallpaper">true</item>
    </style>


    <style name="ComposeFieldLayout">
        <item name="android:background">#80ffffff</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:addStatesFromChildren">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RecipientComposeFieldLayout" parent="@style/ComposeFieldLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">0.0dip</item>
    </style>
</resources>
