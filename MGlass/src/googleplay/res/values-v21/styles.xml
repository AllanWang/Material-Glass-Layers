<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlayDrawerProfileNameText" parent="@style/PlayMediumPlainText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="PlayMediumPlainText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="Theme.Base.InstrumentManager.Light" parent="@android:style/Theme.Material.NoActionBar" />
    <!--causes layering issues-->

    <style name="SettingsActionBarStyle" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">#88000000</item>
    </style>
    <style name="SetupWizardTheme.Light" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:textColorSecondary">#ddffffff</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!--darken play store drawer selector-->

    <style name="PlayDrawerSelectedText">
        <item name="android:textStyle">bold</item>
        <item name="android:background">#80121212</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">32.0dip</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>
