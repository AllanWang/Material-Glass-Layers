<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="android.material.glass">

    <!-- This will set the Icon, Target package to overlay & priority for this apk -->
    <application android:icon="@drawable/theme_application_icon" />
    <overlay android:targetPackage="android" android:priority="99" />

    <!-- This tells the layers application about this theme apk -->
    <meta-data android:name="rom" android:value="Material_Glass" />
    <meta-data android:name="infoShort" android:value="Theme for framework" />
    <meta-data android:name="infoLong" android:value="This will change the core styles for many apps" />
    <meta-data android:name="author" android:value="Pitched Apps" />
</manifest>