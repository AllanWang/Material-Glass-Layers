<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="6.0dip"
    android:insetLeft="4.0dip"
    android:insetRight="4.0dip"
    android:insetTop="6.0dip">
    <layer-list android:paddingMode="stack">
        <item>
            <ripple android:color="?android:colorControlHighlight">
                <item>
                    <shape xmlns:android="http://schemas.android.com/apk/res/android"
                        android:shape="rectangle">
                        <corners android:topLeftRadius="2.0dip"
                            android:topRightRadius="2.0dip" />
                        <solid android:color="?android:colorButtonNormal" />
                        <padding android:bottom="4.0dip"
                            android:left="8.0dip"
                            android:right="8.0dip"
                            android:top="4.0dip" />
                    </shape>
                </item>
            </ripple>
        </item>
        <item>
            <selector xmlns:android="http://schemas.android.com/apk/res/android">
                <item android:state_checked="false">
                    <nine-patch android:src="@drawable/btn_toggle_indicator_mtrl_alpha"
                        android:tint="?android:colorControlNormal" />
                </item>
                <item android:state_checked="true">
                    <nine-patch android:src="@drawable/btn_toggle_indicator_mtrl_alpha"
                        android:tint="?android:colorControlActivated" />
                </item>
            </selector>
        </item>
    </layer-list>
</inset>