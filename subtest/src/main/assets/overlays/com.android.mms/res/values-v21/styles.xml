<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MmsTheme" parent="@android:style/Theme.Material.Wallpaper">
        <item name="android:actionBarStyle">@style/MmsActionBarStyle</item>
        <item name="android:statusBarColor">#80000000</item>
    </style>
    <style name="MmsActionBarStyle" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">#80000000</item>
        <item name="android:elevation">2.0dip</item>
    </style>
    <style name="WidgetTitle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="NotificationPrimaryText">
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="NotificationSecondaryText">
        <item name="android:textColor">#ddffffff</item>
    </style>
    <style name="NotificationSubjectText">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <!--broken os 11/10/2015-->
    <style name="BackgroundOnlyTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoDisplay">true</item>
    </style>

    <!--slim 01/20/2016-->
    <style name="HeaderTheme" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar">
        <item name="android:colorBackground">#80000000</item>
        <item name="android:spinnerDropDownItemStyle">@style/HeaderSpinnerDropDown</item>
        <item name="android:colorAccent">?android:textColorPrimary</item>
        <item name="android:popupTheme">@android:style/ThemeOverlay.Material.Dark</item>
    </style>

    <style name="HeaderSpinnerDropDown" parent="@android:style/Widget.Material.DropDownItem.Spinner">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="ListViewStyle" parent="@android:style/Widget.DeviceDefault.ListView">
        <item name="android:overScrollMode">always</item>
    </style>
    <style name="ContactListFilterTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:listViewStyle">@style/ListViewStyle</item>
    </style>

    <style name="TextAppearanceMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="TextAppearanceSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>
